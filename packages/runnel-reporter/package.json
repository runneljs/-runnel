{
  "name": "@runnel/reporter",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/mjs/index.js"
    }
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.3"
  },
  "bin": {
    "runnel-report": "dist/mjs/report-aggregator.js"
  },
  "files": [
    "dist/cjs",
    "dist/mjs"
  ],
  "keywords": [
    "runnel",
    "bus",
    "eventbus",
    "event bus",
    "eventemitter",
    "event emitter",
    "message bus",
    "pubsub",
    "channel",
    "communication",
    "contract",
    "microfrontends",
    "microfrontend",
    "micro frontends",
    "micro frontend",
    "microservices"
  ],
  "license": "MIT",
  "scripts": {
    "build:note": "echo '[NOTE]: Use **npm** run build for generating ESM instead of bun run build.'",
    "build:core": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "build": "npm run build:note && npm run build:core && npm link",
    "test": "bun test"
  }
}

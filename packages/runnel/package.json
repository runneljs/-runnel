{
  "name": "runneljs",
  "version": "0.2.0",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./bc": {
      "require": "./dist/bc/index.cjs",
      "import": "./dist/bc/index.js",
      "types": "./dist/bc/index.d.ts"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "vite build",
    "postbuild": "tsc --project tsconfig.type.json --outdir ./dist",
    "test": "vitest run",
    "publish": "npm run build && npm publish --access public",
    "publish:jsr": "npx jsr publish"
  },
  "devDependencies": {
    "@cfworker/json-schema": "^1.12.8",
    "@types/lodash.isequal": "^4.5.8",
    "@vitest/coverage-v8": "^1.6.0",
    "fast-glob": "^3.3.2",
    "happy-dom": "^14.12.3",
    "lodash.isequal": "^4.5.0",
    "rimraf": "^5.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.3.2",
    "vitest": "^1.6.0"
  },
  "description": "Runnel is a type safe event bus for microfrontends.",
  "repository": {
    "type": "git",
    "url": "https://github.com/runneljs/runnel.git"
  },
  "bugs": {
    "url": "https://github.com/runneljs/runnel/issues"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "runnel",
    "bus",
    "eventbus",
    "eventemitter",
    "event emitter",
    "event bus",
    "message bus",
    "pubsub",
    "channel",
    "communication",
    "contract",
    "microfrontends",
    "microfrontend",
    "micro frontends",
    "micro frontend",
    "microservices"
  ],
  "license": "MIT"
}

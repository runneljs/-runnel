{
  "name": "runneljs",
  "version": "0.1.18",
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.umd.js",
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    }
  },
  "devDependencies": {
    "@cfworker/json-schema": "^1.12.8",
    "@types/bun": "latest",
    "@types/lodash.isequal": "^4.5.8",
    "lodash.isequal": "^4.5.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.5",
    "vite-plugin-dts": "^3.7.3"
  },
  "description": "Runnel is a type safe event bus for microfrontends.",
  "repository": {
    "type": "git",
    "url": "https://github.com/runneljs/runnel.git"
  },
  "bugs": {
    "url": "https://github.com/runneljs/runnel/issues"
  },
  "files": [
    "dist/"
  ],
  "keywords": [
    "runnel",
    "bus",
    "eventbus",
    "eventemitter",
    "event emitter",
    "event bus",
    "message bus",
    "pubsub",
    "channel",
    "communication",
    "contract",
    "microfrontends",
    "microfrontend",
    "micro frontends",
    "micro frontend",
    "microservices"
  ],
  "license": "MIT",
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist && bun run build:declaration",
    "build:declaration": "tsc --project tsconfig.type.json --outdir ./dist",
    "build:vite": "bunx --bun vite build",
    "test": "bun test",
    "publish": "bun run build && npm publish --access public"
  }
}
